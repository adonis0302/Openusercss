extends layouts/main

block page
  .box.shadow-floating
    .section.is-paddingless
      h1 Register
      form(method="post", action="/users/register", data-c-margin-top="2")
        .columns
          .column
            .field
              .control.has-icons-left
                input.input(type="text", name="displayname", placeholder="Username", required)
                span.icon.is-small.is-left
                  i.far.fa-user

          .column
            .field
              .control.has-icons-left
                input.input(type="email", name="email", placeholder="E-mail address", required)
                span.icon.is-small.is-left
                  i.far.fa-envelope

        .columns
          .column
            .field
              .control.has-icons-left
                input.input(type="password", name="password", placeholder="Password", required)
                span.icon.is-small.is-left
                  i.far.fa-lock

          .column
            .field
              .control.has-icons-left
                input.input(type="password", name="passwordverify", placeholder="Confirm password", required)
                span.icon.is-small.is-left
                  i.far.fa-lock-alt
              
        .field.is-grouped
          .control
            button.button.is-primary Register
