mixin metas
  meta(http-equiv="x-ua-compatible", content="ie=edge")
  meta(charset="utf-8")
  meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
  meta(name="robots", content="index,follow,noodp")
  meta(name="googlebot", content="index,follow")
  meta(name="mobile-web-app-capable", content="yes")
  link(rel="icon", type="image/png", href="/img/openusercss.icon-x32.png")
  link(rel="manifest", href="/manifest.json")

mixin assets
  script(type="text/javascript", src="/browser.bundle.min.js", defer)
  //- link(type="text/css", rel='stylesheet', href='/css/bundle.min.css')

mixin frame
  doctype html
  html(lang="en").no-js
    head
      title OpenUserCSS
      +metas
      +assets
      body
        include ../partials/loading-indicator
        include ../partials/noscript
        if block
          block

+frame
  block page
