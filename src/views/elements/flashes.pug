if (errorMsg.length > 0)
  .message.is-danger
    .message-header
      if (errorMsg.length === 1)
        p An error occurred while processing your request
      else
        p Multiple errors occurred while processing your request
    .message-body.content(data-c-padding-left="4")
      each notification in errorMsg
        li #{notification}

if (infoMsg.length > 0)
  .message.is-info
    .message-header
      if (infoMsg.length === 1)
        p Notification
      else
        p Notifications
    .message-body.content(data-c-padding-left="4")
      each notification in infoMsg
        li #{notification}
