extends layouts/main

block page
  h1 Login
  .container(data-c-margin-top="4")
    form(method="post", action="/users/login")
      .field
        .control.has-icons-left
          input.input(type="email", name="email", placeholder="E-mail address", required)
          span.icon.is-small.is-left
            i.far.fa-envelope

      .field
        .control.has-icons-left
          input.input(type="password", name="password", placeholder="Password", required)
          span.icon.is-small.is-left
            i.far.fa-lock

      .field.is-grouped
        .control
          button.button.is-primary Login
