extends layouts/main

block page
  .box.shadow-floating
    .section.is-paddingless
      h1 Login
      form(method="post", action="/users/login", data-c-margin-top="2")
        .columns
          .column
            .field
              .control.has-icons-left
                input.input(type="email", name="email", placeholder="E-mail address", required)
                span.icon.is-small.is-left
                  i.far.fa-envelope

          .column
            .field
              .control.has-icons-left
                input.input(type="password", name="password", placeholder="Password", required)
                span.icon.is-small.is-left
                  i.far.fa-lock

        .field.is-grouped
          .control
            button.button.is-primary Login
