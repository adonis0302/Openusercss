extends layouts/main

block page
  h1 Register
  .container(data-c-margin-top="4")
    form(method="post", action="/users/register")
      .field
        .control.has-icons-left
          input.input(type="text", name="username", placeholder="Username", required)
          span.icon.is-small.is-left
            i.far.fa-user
              
      .field
        .control.has-icons-left
          input.input(type="email", name="email", placeholder="E-mail address", required)
          span.icon.is-small.is-left
            i.far.fa-envelope

      .field
        .control.has-icons-left
          input.input(type="password", name="password", placeholder="Password", required)
          span.icon.is-small.is-left
            i.far.fa-lock

      .field
        .control.has-icons-left
          input.input(type="password", name="passwordverify", placeholder="Confirm password", required)
          span.icon.is-small.is-left
            i.far.fa-lock-alt
              
      .field.is-grouped
        .control
          button.button.is-primary Register
