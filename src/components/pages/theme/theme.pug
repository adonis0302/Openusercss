div
  b-container
    div
      b-section
        notification(v-show="actionErrors.length > 0", icon="alert", color="is-danger").is-danger
          div(slot="content")
            p(v-for="error in actionErrors") {{error}}
        b-level
          b-level-left
            h1 Profile
          b-level-right
            b-columns
              b-column
                router-link(:to="'/theme/' + theme($route.params.id) + '/edit'")
                  b-button(is-primary)
                    | Upload new theme
        b-columns
          b-column(is-6)
            div
              b-box(is-paddingless, is-marginless).ouc-user-card
                b-column(is-paddingless)
                  b-tile(is-parent, is-paddingless)
                    b-tile(is-4)
                      b-tile(is-child).ouc-user-avatar
                        flush-img(:source="theme($route.params.id).screenshotUrl", :placeholder="theme($route.params.id).smallScreenshotUrl", height="185px", align="left")
                    b-tile(is-8)
                      b-tile(is-parent)
                        b-tile(is-parent)
                          b-tile(is-child, is-parent, is-vertical, is-paddingless)
                            h2 {{theme($route.params.id).displayname}}
                            br
                            p Installs: {{theme($route.params.id).installs}}
                            p Average rating: {{theme($route.params.id).rating}}

            hr
            b-box
              h2 About
              hr
              p {{user.description}}
          b-column(is-6)
            theme-card(v-for="(theme, index) in theme($route.params.id).themes", :data-index="index", direction="horizontal", card-class="is-primary").has-bottom-margin
              flush-img(slot="screenshot", :source="theme.screenshots[0]", height="135px")
              h4(slot="title") {{theme.title}}
              p(slot="description") {{theme.description}}
              p(slot="author") by {{theme($route.params.id).displayname}}

  attributor
