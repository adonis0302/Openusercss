div
  theme-card(v-for="(theme, index) in latestThemes", :data-index="index", direction="horizontal", card-class="is-primary").has-bottom-margin
    flush-img(slot="screenshot", :source="theme.screenshotUrl", placeholder="/img/main.bg-x128.png", height="100%")
    h4(slot="title") {{theme.title}}
    p(slot="description") {{theme.description}}
    p(slot="author-displayname") Full Name here
    h6(slot="author") by {{theme.author}}
    img(slot="author-avatar", src="https://en.gravatar.com/userimage/37343181/d66c2e13a3bf375f9e2bd96a9a9f9c54.png", width="40")
