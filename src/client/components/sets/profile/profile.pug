b-section
  b-level
    b-level-left
      h1 Profile
    b-level-right
      b-columns
        b-column
          router-link(to="new-theme")
            b-button(is-primary)
              | Upload new theme
        b-column
          router-link(to="/account")
            b-button(is-primary)
              | Change account details
        b-column
          router-link(to="/profile/edit")
            b-button(is-primary)
              | Edit profile
  b-columns
    b-column(is-6)
      profile-card
      b-box
        h2 About
        hr
        p {{user.description}}
    b-column(is-6)
      b-box
        h2 Your themes
        hr
        theme-card(v-for="(theme, index) in user.themes", :data-index="index", direction="horizontal", card-class="is-primary").has-bottom-margin
          h4(slot="title") {{theme.title}}
          flush-img(slot="screenshot", :src="theme.screenshotUrl", height="135")
          p(slot="description") {{theme.description}}
          p(slot="author-displayname") Full Name here
          h6(slot="author-username") @{{theme.author}}
          img(slot="author-avatar", src="https://en.gravatar.com/userimage/37343181/d66c2e13a3bf375f9e2bd96a9a9f9c54.png", width="40")
